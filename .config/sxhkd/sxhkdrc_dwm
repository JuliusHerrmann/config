#
# wm independent hotkeys
#
# program launcher
super + d
    ~/.config/rofi/launchers/launcher.sh
	#rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd 

super + alt + l
  lockscreen

super + shift + s
	prompt {"Shutdown?" "shutdown now"}


# select layout 
super + shift + l
	change-layout
# select autorandr settings 
super + shift + a
  change-randr
# backlight mappings
XF86MonBrightnessUp
	xbacklight -inc 5
XF86MonBrightnessDown
	xbacklight -dec 5
# volume mappings
XF86AudioRaiseVolume
	pulseaudio-increase-vol.sh
	#sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume 0 +5%"
XF86AudioLowerVolume
	pulseaudio-decrease-vol.sh
	#sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume 0 -5%"
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
# screenshots
Home
  scrot -s "%Y-%m-%d_$wx$h.png" -e 'xclip -selection clipboard -t image/png -i $f && mv $f ~/Pictures/Screenshots/'
# for using dragon
# scrot -s "%Y-%m-%d_$wx$h.png" -e 'dragon $f & disown'
# bluetooth and network mappings
super + control + w
  networkmanager_dmenu
# wifi_setup
super + control + b
    btmenu
super + shift + b
    btmenu -d
super + control + e
    rofi -show emoji -modi emoji
super + p
		rofi-pass
super + c
		rofi -show calc -modi calc -no-show-match -no-sort
# start programs
super + ctrl + f
	firefox
super + ctrl + s
	spotify
super + ctrl + d
	discord
super + ctrl + r
	alacritty -e ranger
super + ctrl + n
	pcmanfm
super + ctrl + p
	pavucontrol

# dunst management
ctrl + space
  dunstctl close

ctrl + space + shift
  dunstctl history-pop

ctrl + space + alt
  dunstctl close-all

ctrl + shift + alt + space
  dunstctl context
#find cursor for Coder Dojo projects
super + m
	find-cursor -s 150 -c red
