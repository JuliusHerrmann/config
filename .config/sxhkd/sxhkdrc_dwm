#
# wm independent hotkeys
#
# program launcher
super + d
    ~/.config/rofi/launchers/launcher.sh
	#rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd 
#
# bspwm hotkeys
#

# quit/restart bspwm
#super + shift + {e,r}
#	bspc {quit,wm -r}
super + shift + s
	prompt {"Shutdown?" "shutdown now"}

# select layout 
super + shift + l
	change-layout
# backlight mappings
XF86MonBrightnessUp
	xbacklight -inc 1
XF86MonBrightnessDown
	xbacklight -dec 1
# volume mappings
XF86AudioRaiseVolume
	pulseaudio-increase-vol.sh
	#sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume 0 +5%"
XF86AudioLowerVolume
	pulseaudio-decrease-vol.sh
	#sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume 0 -5%"
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# bluetooth and network mappings
super + control + w
    wifi_setup
super + control + b
    btmenu
super + shift + b
    btmenu -d
super + control + e
    rofi -show emoji -modi emoji
# start programs
super + ctrl + f
	firefox
super + ctrl + r
	alacritty -e ranger
super + ctrl + n
	pcmanfm

#find cursor for Coder Dojo projects
super + m
	find-cursor -s 150 -c red
